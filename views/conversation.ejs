<!DOCTYPE html>
<html>
<head>
  <title>WhatsApp Conversation</title>
  <!-- Add these links in the <head> section of your HTML file -->
  <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
  <!-- Add this link in the <head> section of your HTML file -->
  <link href="/main.css" rel="stylesheet">
</head>
<body class="bg-gradient-to-r from-purple-500 to-pink-500">
  <div class="min-h-screen flex items-center justify-center">
    <div class="bg-white p-8 shadow-md rounded-md w-96">
      <h1 class="text-2xl font-bold mb-4">WhatsApp Conversation</h1>
      <% if (messages.length > 0) { %>
        <ul>
          <% messages.forEach((message) => { %>
            <li class="mb-4">
              <%= message.body %>
            </li>
          <% }) %>
        </ul>
      <% } else { %>
        <p>No messages found.</p>
      <% } %>
    </div>
  </div>

  <!-- Add this script at the end of your HTML body -->
  <script>
    const formatDate = (dateString) => {
      const date = new Date(dateString);
      return date.toISOString().slice(0, 19).replace('T', ' ');
    };

    // Function to reload the page every 10 seconds
    const reloadPage = () => {
      window.location.reload();
    };

    // Call the reloadPage function every 10 seconds
    setInterval(reloadPage, 10000);
  </script>
</body>
</html>
